#include <stdio.h>
#include <string.h>

int main() {
    char str1[50] = "Hello";
    char str2[50] = "World";
    char buffer[100];

    // String length
    printf("Length of str1: %zu\n", strlen(str1));  // Output: 5
    printf("Length of str2: %zu\n", strlen(str2));  // Output: 5

    // String copy
    strcpy(buffer, str1);
    printf("Buffer after strcpy: %s\n", buffer);   // Output: Hello

    // String concatenation
    strcat(buffer, " ");
    strcat(buffer, str2);
    printf("Buffer after strcat: %s\n", buffer);   // Output: Hello World

    return 0;
}
